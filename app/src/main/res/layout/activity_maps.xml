<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MapsActivity" />

    <FrameLayout
        android:id="@+id/flContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.getbase.floatingactionbutton.FloatingActionsMenu
            android:id="@+id/fab_menu"
            fab:fab_addButtonColorNormal="#CD2131"
            fab:fab_addButtonColorPressed="#CD2131"
            fab:fab_addButtonSize="normal"
            fab:fab_colorPressed="#CD2131"
            fab:fab_labelStyle="@style/menu_labels_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="8dp">

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/default_cluster"
                fab:fab_addButtonColorNormal="#46B441"
                fab:fab_addButtonColorPressed="#76B476"
                fab:fab_addButtonSize="normal"
                fab:fab_colorPressed="#76B476"
                fab:fab_title="Default Cluster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/custom_cluster"
                fab:fab_addButtonColorNormal="#4071B4"
                fab:fab_addButtonColorPressed="#6285B4"
                fab:fab_addButtonSize="normal"
                fab:fab_colorPressed="#6285B4"
                fab:fab_title="Custom Cluster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </com.getbase.floatingactionbutton.FloatingActionsMenu>
    </FrameLayout>
</FrameLayout>